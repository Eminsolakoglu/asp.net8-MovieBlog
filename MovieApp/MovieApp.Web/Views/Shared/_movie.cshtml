@model Movie


<div class="card mb-3" style="max-width: 540px;">
     <div class="row no-gutters">
       <div class="col-md-3">
         <img src="/img/@Model.ImageUrl" class="card-img" alt="@Model.Title">
       </div>
       <div class="col-md-9">
         <div class="card-body">
           <h5 class="card-title">@Model.Title</h5>
           <p>
             <a class="btn btn-primary" asp-controller="Movies" asp-action="Details" asp-route-id="@Model.MovieId" >details</a>
             <a class="btn btn-primary" asp-controller="Movies" asp-action="Edit" asp-route-id="@Model.MovieId" >edit</a>
           </p>
         </div>
       </div>
     </div>
   </div>

